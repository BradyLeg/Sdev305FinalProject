<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Week Calendar</title>

    <link rel="stylesheet" href="styles/main.css">
    <link href="/styles/calendarStyles.css" rel="stylesheet">
</head>
<body>
    <h1 class="calendar-header">Weekly Task Calendar</h1>
    <div class="calendar">
        <% const days = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"]; %>
        <% days.forEach(day => { %>
            <div class="day">
                <h3><%= day %></h3>
                <% userTasks.forEach(task => { %>
                    <% if ((task.assignedday || "").toLowerCase() === day.toLowerCase()) { %>
                        <div class="task-container">
                            <!-- Task Name and Show Details Button -->
                            <p class="task-item">
                                <%= task.task %> - <%= task.tasktime %>
                                <button class="show-details-btn" onclick="toggleTaskDetails(this)">Show Details</button>
                            </p>
                            
                            <!-- Hidden Task Details -->
                            <div class="task-details">
                                <p><strong>Task:</strong> <%= task.task %></p>
                                <p><strong>Start Date:</strong> <%= task.assignedday %></p>
                                <p><strong>Perdicted Days to Complete:</strong> <%= task.days %></p>
                                <p><strong>Description:</strong> <%= task.description || "No details provided" %></p>
                                <p><strong>Urgency:</strong> <%= task.urgency %></p>
                            </div>
                        </div>
                    <% } %>
                <% }) %>
            </div>
        <% }); %>
    </div>
    
    <form action="/" method="get" class="calendar-button">
        <button role="button"> Back to Home page</button>
    </form>

    <script src="/scripts/CalendarViewHighlight.js"></script>
    <script src="/scripts/toggleTaskCalendarView.js"></script>
</body>
</html>
